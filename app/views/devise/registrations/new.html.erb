<title>Sign Up</title>


<div class="row">
  <div class="span6 offset3">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin", role: "form" }) do |f| %>
  	<h2 class="form-signin-heading">Sign Up</h2>

  <%= devise_error_messages! %>

  <div><%= f.email_field :email, {autofocus: true, class: "form-control", placeholder: "Email address"} %></div>

  <div><%= f.password_field :password, {class: "form-control", placeholder: "Password", autocomplete: "off"} %></div>

  <div><%= f.password_field :password_confirmation, {class: "form-control", placeholder: "Confirm Password", autocomplete: "off"} %></div>

  <div><%= f.submit "Sign up", class: "btn btn-large btn-primary btn-block" %></div>

<%= render "devise/shared/links" %>
<% end %>

  </div>
</div>
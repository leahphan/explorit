<title>Sign Up</title>

<div class="row">
  <div class="col-xs-10 col-xs-offset-1 col-md-8 col-md-offset-2">
  	<div class="jumbotron">
  		<h1>Explorit</h1>
  		<p class="lead">Discover beautiful places around the world.</p>
  			<%= link_to image_tag("facebook-login-button.png"), user_omniauth_authorize_path(:facebook), :id => "sign_in" %>
  			<br>
  			<br>
  			or
  			<br>
  			<br>

  		<div class="row">
  		<div class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3">
				<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin", role: "form" }) do |f| %>
		  	<%= devise_error_messages! %>
			  	<%= f.email_field :email, {autofocus: true, class: "form-control", placeholder: "Email address"} %>
			  	<%= f.password_field :password, {class: "form-control", placeholder: "Password", autocomplete: "off"} %>
			  	<%= f.submit "Sign up", class: "btn btn-large btn-primary btn-block" %>
		  	<%= link_to "Sign in", new_session_path(resource_name) %><br />
		<% end %>
			</div>
  		</div>
		</div>
  </div>
</div>
<div class="row">
		<% if @user.posts.any? %>
			<h3>Photos (<%= @user.posts.count %>)</h3>
				<ul class="posts">
				  <% @posts.each do |post| %>
				    <div class="col-sm-6 col-md-3">
				      <div class="thumbnail">
				        <%= image_tag post.photo.url(:thumb) %>
				        <div class="caption">
				          <h3><%= post.title %></h3>
				          <p><%= post.description %></p>
				            <span class="timestamp">
				              Posted <%= time_ago_in_words(post.created_at) %> ago.
				            </span>
				            <span class="edit">
				            	<%= link_to( 'Edit', {:controller => 'posts', :action => 'edit', :id => post.id}) %>
				            </span>
				            <span class="delete">
				   						<%= link_to( "Delete", {:controller => 'posts', :action => 'destroy', :id => post.id}, :method => 'delete') %>
				   					</span>
				        </div>
				      </div>
				    </div>
				  <% end %>
				</ul>
		<% end %>
	</div>
</div>
